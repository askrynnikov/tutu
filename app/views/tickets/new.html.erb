<h1>Buying ticket</h1>

<p><strong>Train number: </strong><%= @train.number %></p>

<p><strong>Departure station: </strong><%= @start_station.title %></p>

<p><strong>Arrival station: </strong><%= @end_station.title %></p>

<h1>Passenger info</h1>
<%= form_for(@ticket) do |f| %>
    <%= render 'common/errors', resource: @ticket %>

    <%= f.hidden_field :train_id %>
    <%= f.hidden_field :start_station_id %>
    <%= f.hidden_field :end_station_id %>

    <div class="field">
      <%= f.label :passenger_name, "Passenger name" %>
      <%= f.text_field :passenger_name %>
    </div>

    <div class="field">
      <%= f.label :passenger_passport, "Passenger passport" %>
      <%= f.text_field :passenger_passport %>
    </div>

    <div class="actions">
      <%= f.submit "Buy ticket" %>
    </div>
<% end %> 
