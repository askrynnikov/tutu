<p id="notice"><%= notice %></p>

<h1>Поиск билета</h1>

<%= form_for(@search, method: :post, url: search_path) do |f| %>
    <div class="field">
      <%= f.label :start_station_id, "Start station" %>
      <%= f.collection_select :start_station_id, RailwayStation.all, :id, :title %>
    </div>

    <div class="field">
      <%= f.label :end_station_id, "End station" %>
      <%= f.collection_select :end_station_id, RailwayStation.all, :id, :title %>
    </div>
    <div class="actions">
      <%= f.submit 'Search' %>
    </div>

    <% if @search.search_result %>
        <table>
          <thead>
          <tr>
            <td>Train</td>
            <td>Route</td>
            <td>Departure time</td>
            <td>Arrival time</td>
          </tr>
          </thead>
          <tbody>
          <% @search.search_result.each do |result| %>
              <tr>
                <td><%= result.number %></td>
                <td><%= result.route.name %></td>
                <td><%= @search.find_start_station.departure_in(result.route) %></td>
                <td><%= @search.find_end_station.arrival_in(result.route) %></td>
                <td><%= result.id %></td>
                <td>
                  <%= form_tag new_ticket_path, method: :get do %>
                      <%= number_field_tag :train_id, result.id %>
                      <%= hidden_field_tag :start_station_id, @search.start_station_id %>
                      <%= hidden_field_tag :end_station_id, @search.end_station_id %>
                      <%= submit_tag "Buy ticket" %>
                  <% end %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
    <% end %>
<% end %>
